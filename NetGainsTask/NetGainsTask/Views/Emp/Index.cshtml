@model List<Employee>
@{
}


<h2 class="text-center my-5">List Of Employees</h2>

<div class="row mb-3">
	<div class="col-md-6">
		<a class="btn btn-primary" asp-controller="Emp" asp-action="Create">New Employee</a>
	</div>
	<div class="col-md-6 text-end">
		<form asp-controller="Emp" asp-action="Index" method="get" class="d-flex">
			<input type="text" name="searchString" value="@ViewData["filter"]"
				   class="form-control me-2" placeholder="Search Employee..." />
			<button type="submit" class="btn btn-outline-primary">Search</button>
		</form>
	</div>
</div>



<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Date of Birth</th>
			<th>Country</th>
			<th>State</th>
			<th>Qualification</th>
			<th>Email</th>
			<th>Phone Number</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var employee in Model)
		{
			<tr>
				<td>@employee.Id</td>
				<td>@employee.FirstName</td>
				<td>@employee.LastName</td>
				<td>@employee.DOB</td>
				<td>@employee.Country</td>
				<td>@employee.State</td>
				<td>@employee.Qualification</td>
				<td>@employee.Email</td>
				<td>@employee.PhoneNo</td>
				<td style="white-space:nowrap">
					<a class="btn btn-success btn-sm" asp-controller="Emp" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
					<a class="btn btn-danger btn-sm" asp-controller="Emp" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>

</table>